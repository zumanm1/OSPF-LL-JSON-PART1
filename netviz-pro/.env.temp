# ================================================================================
# NetViz Pro - Environment Configuration Template
# ================================================================================
# INSTRUCTIONS:
# 1. Copy this file to .env.local: cp .env.temp .env.local
# 2. Fill in your actual values below
# 3. NEVER commit .env.local to version control
# ================================================================================

# ================================================================================
# AUTHENTICATION SETTINGS
# ================================================================================
# Server port for authentication API (default: 9041)
AUTH_PORT=9041

# Secret key for JWT tokens - GENERATE A STRONG RANDOM KEY!
# Use: openssl rand -hex 32
APP_SECRET_KEY=CHANGE_ME_USE_RANDOM_32_HEX_STRING

# Session timeout in seconds (3600 = 1 hour, 86400 = 24 hours)
APP_SESSION_TIMEOUT=3600

# ================================================================================
# DEFAULT ADMIN CREDENTIALS
# ================================================================================
# These are used to create the initial admin account
# CHANGE THE PASSWORD IMMEDIATELY AFTER FIRST LOGIN!
APP_ADMIN_USERNAME=admin
APP_ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ================================================================================
# USER EXPIRY SETTINGS
# ================================================================================
# Default maximum uses before account expires (0 = unlimited)
APP_DEFAULT_MAX_USES=10

# Whether to enable expiry by default for new users (true/false)
APP_EXPIRY_ENABLED=true

# ================================================================================
# SECURITY SETTINGS
# ================================================================================
# Application runs on localhost only (true = recommended for security)
LOCALHOST_ONLY=true

# Allowed origins for CORS (only localhost by default)
ALLOWED_ORIGINS=http://localhost:9040,http://127.0.0.1:9040

# ================================================================================
# API KEYS (Optional - Future Use)
# ================================================================================
FOR_SEARCH_API_FUTURE_KEY=YOUR_API_KEY_HERE
